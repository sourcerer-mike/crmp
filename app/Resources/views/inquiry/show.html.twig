{% extends 'base.html.twig' %}

{% block breadcrumb %}
    <ol class="breadcrumb">
        <li>
            <a href="/">
                Dashboard
            </a>
        </li>
        <li>
            <a href="{{ path('inquiry_index') }}">
                Inquiries
            </a>
        </li>
        <li class="active">
            {{ inquiry.title }}
        </li>
    </ol>
{% endblock %}

{% block related_nav %}
    <ul class="nav nav-pills nav-stacked">
        <li>
            <a href="{{ path('inquiry_index') }}">
                <i class="fa fa-list-ul"></i>
                Back to the list
            </a>
        </li>
        <li>
            <a href="{{ path('inquiry_edit', { 'id': inquiry.id }) }}">
                <i class="fa fa-pencil"></i>
                Edit
            </a>
        </li>
    </ul>
{% endblock %}

{% block body %}
    <h1>Inquiry</h1>

    <table class="table table-striped table-hover table-bordered">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ inquiry.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ inquiry.title }}</td>
            </tr>
            <tr>
                <th>Predicted value</th>
                <td>{{ inquiry.netValue|price }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ inquiry.content }}</td>
            </tr>
        </tbody>
    </table>
{% endblock %}
