{% extends 'base.html.twig' %}

{% block breadcrumb %}
    <ol class="breadcrumb">
        <li>
            <a href="/">
                Dashboard
            </a>
        </li>
        <li>
            <a href="{{ path('inquiry_index') }}">
                Inquiries
            </a>
        </li>
        <li class="active">
            {{ inquiry.title }}
        </li>
    </ol>
{% endblock %}

{% block related_nav %}
    <div class="btn-group-vertical">
        <a href="{{ path('offer_new', {'inquiry': inquiry.id}) }}" type="button" class="btn btn-success">
            <i class="fa fa-plus"></i>
            {% trans %}Attach offer{% endtrans %}
        </a>
    </div>

    <ul class="nav nav-pills nav-stacked">
        <li>
            <a href="{{ path('inquiry_index') }}">
                <i class="fa fa-list-ul"></i>
                {% trans %}Back to the list{% endtrans %}
            </a>
        </li>
        <li>
            <a href="{{ path('inquiry_edit', { 'id': inquiry.id }) }}">
                <i class="fa fa-pencil"></i>
                {% trans %}Edit{% endtrans %}
            </a>
        </li>
    </ul>
{% endblock %}

{% block body %}
    <h1>{{ inquiry.title }}</h1>

    <table class="table table-striped table-hover table-bordered">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ inquiry.id }}</td>
        </tr>
        <tr>
            <th>{% trans %}Predicted value{% endtrans %}</th>
            <td>{{ inquiry.netValue|price }}</td>
        </tr>
        <tr>
            <th>{% trans %}Content{% endtrans %}</th>
            <td>{{ inquiry.content }}</td>
        </tr>
        </tbody>
    </table>

    <h2>{% trans %}Offers{% endtrans %}</h2>

    {% include "offer/list.html.twig" with {'offers': inquiry.offers} %}

{% endblock %}
