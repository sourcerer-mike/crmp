{% extends 'base.html.twig' %}

{% block related_nav %}
    <div class="btn-toolbar" role="toolbar">
        <div class="btn-group">
            <a href="{{ path('inquiry_new') }}" class="btn btn-success">
                <i class="fa fa-plus"></i>
                New inquiry
            </a>
        </div>
    </div>
{% endblock %}

{% block breadcrumb %}
    <ol class="breadcrumb">
        <li>
            <a href="/">
                Dashboard
            </a>
        </li>
        <li class="active">Inquiries</li>
    </ol>
{% endblock %}


{% block body %}
    <h1>Inquiry list</h1>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>{% trans %}Title{% endtrans %}</th>
                <th>Predicted value</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for inquiry in inquiries %}
            <tr>
                <td>
                    <a href="{{ path('inquiry_show', { 'id': inquiry.id }) }}">
                        {{ inquiry.title }}
                    </a>
                </td>
                <td>{{ inquiry.netValue|price }}</td>
                <td>
                    <div class="btn-group">
                        <a href="{{ path('inquiry_show', { 'id': inquiry.id }) }}"
                                class="btn btn-primary">
                            <i class="fa fa-eye"></i>
                        </a>
                        <a href="{{ path('inquiry_edit', { 'id': inquiry.id }) }}"
                                class="btn btn-default">
                            <i class="fa fa-pencil"></i>
                        </a>
                    </div>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
