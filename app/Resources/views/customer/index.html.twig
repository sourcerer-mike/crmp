{% extends 'base.html.twig' %}

{% block body %}
    <h1>Customer list</h1>

    <div class="btn-toolbar" role="toolbar">
        <div class="btn-group">
            <a href="{{ path('customer_new') }}"
                    title="Create a new entry"
                    class="btn btn-success">
                <i class="fa fa-plus"></i>
                New customer
            </a>
        </div>
    </div>

    <table class="table table-striped table-hover">
        <thead>
        <tr>
            <th>Name</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        {% for customer in customers %}
            <tr>
                <td>
                    <a href="{{ path('customer_show', { 'id': customer.id }) }}">{{ customer.name }}</a>
                </td>
                <td>
                    <a href="{{ path('customer_show', { 'id': customer.id }) }}"
                       title="View"
                       class="btn btn-default">
                        <i class="fa fa-eye"></i>
                    </a>
                    <a href="{{ path('customer_edit', { 'id': customer.id }) }}"
                       title="Edit"
                       class="btn btn-default">
                        <i class="fa fa-pencil"></i>
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
