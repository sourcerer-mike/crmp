{% extends 'base.html.twig' %}

{% block title %}{{ customer.name }}{% endblock %}

{% block related_nav %}
    <ul class="nav nav-pills nav-stacked">
        <li>
            <a href="{{ path('customer_index') }}"
               title="{% trans %}Back to the list{% endtrans %}">
                <i class="fa fa-list-ul"></i>
                {% trans %}Customer list{% endtrans %}
            </a>
        </li>
        <li>
            <a href="{{ path('customer_edit', { 'id': customer.id }) }}"
               title="{% trans %}Edit{% endtrans %}">
                <i class="fa fa-pencil"></i> {% trans %}Edit{% endtrans %}
            </a>
        </li>
    </ul>

    <div class="btn-group">
        <a href="{{ path('inquiry_index', { 'customer': customer.id }) }}"
           title="{% trans %}Edit{% endtrans %}"
                class="btn btn-default">
            <i class="fa fa-question"></i>
            {% trans %}Inquiry list{% endtrans %}
        </a>
        <a href="{{ path('inquiry_new') }}" type="button" class="btn btn-success">
            <i class="fa fa-plus"></i>
        </a>
    </div>
{% endblock %}

{% block breadcrumb %}
    <ol class="breadcrumb">
        <li>
            <a href="/">
                Dashboard
            </a>
        </li>
        <li>
            <a href="{{ path('customer_index') }}">
                {% trans %}Customers{% endtrans %}
            </a>
        </li>
        <li class="active">
            {{ customer.name }}
        </li>
    </ol>
{% endblock %}

{% block body %}
    <h1>{{ customer.name }}</h1>

    <table class="table table-striped table-hover table-bordered">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ customer.id }}</td>
        </tr>
        </tbody>
    </table>

    <h2>{% trans %}Inquiry list{% endtrans %}</h2>

    {% include 'inquiry/_list.html.twig' with {inquiries: customer.inquiries } %}

    <h2>{% trans %}Address list{% endtrans %}</h2>

    {% include 'address/_list.html.twig' with {addresses: customer.addresses } %}

    <a href="{{ path('address_new', {customer: customer.id}) }}"
            class="btn btn-success">
        <i class="fa fa-plus"></i>
        {% trans %}Address creation{% endtrans %}
    </a>
{% endblock %}
