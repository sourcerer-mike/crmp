{% extends 'base.html.twig' %}

{% block breadcrumb %}
    <ol class="breadcrumb">
        <li>
            <a href="/">
                Dashboard
            </a>
        </li>
        <li class="active">
            {% trans %}Offers{% endtrans %}
        </li>
    </ol>
{% endblock %}

{% block related_nav %}
    <div class="btn-toolbar" role="toolbar">
        <div class="btn-group">
            <a href="{{ path('offer_new') }}" class="btn btn-success">
                <i class="fa fa-plus"></i>
                {% trans %}New offer{% endtrans %}
            </a>
        </div>
    </div>
{% endblock %}

{% block body %}
    <h1>{% trans %}Offers{% endtrans %}</h1>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>{% trans %}Title{% endtrans %}</th>
                <th>{% trans %}Price{% endtrans %}</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for offer in offers %}
            <tr>
                <td>
                    <a href="{{ path('offer_show', { 'id': offer.id }) }}">
                        {{ offer.title }}
                    </a>
                </td>
                <td>{{ offer.price|price }}</td>
                <td>
                    <div class="btn-group">
                        <a href="{{ path('offer_show', { 'id': offer.id }) }}"
                           class="btn btn-primary">
                            <i class="fa fa-eye"></i>
                        </a>
                        <a href="{{ path('offer_edit', { 'id': offer.id }) }}"
                           class="btn btn-default">
                            <i class="fa fa-pencil"></i>
                        </a>
                    </div>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
