{% extends 'base.html.twig' %}

{% block breadcrumb %}
    <ol class="breadcrumb">
        <li>
            <a href="/">
                Dashboard
            </a>
        </li>
        <li>
            <a href="{{ path('offer_index') }}">
                Offers
            </a>
        </li>
        <li class="active">
            {{ offer.title }}
        </li>
    </ol>
{% endblock %}

{% block related_nav %}
    <ul class="nav nav-pills nav-stacked">
        <li>
            <a href="{{ path('offer_index') }}">
                <i class="fa fa-list-ul"></i>
                {% trans %}Back to the list{% endtrans %}
            </a>
        </li>
        <li>
            <a href="{{ path('inquiry_show', {'id': offer.inquiry.id}) }}">
                <i class="fa fa-sign-in"></i>
                {% trans %}Goto inquiry{% endtrans %}
            </a>
        </li>
        <li>
            <a href="{{ path('offer_edit', { 'id': offer.id }) }}">
                <i class="fa fa-pencil"></i>
                {% trans %}Edit{% endtrans %}
            </a>
        </li>
    </ul>
{% endblock %}

{% block body %}
    <h1>{{ offer.title }}</h1>

    <table class="table table-bordered table-hover table-striped">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ offer.id }}</td>
        </tr>
        <tr>
            <th>Price</th>
            <td>{{ offer.price|price }}</td>
        </tr>
        <tr>
            <th>Content</th>
            <td>{{ offer.content }}</td>
        </tr>
        </tbody>
    </table>
{% endblock %}
