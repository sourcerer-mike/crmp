{% extends 'AcquisitionBundle:Contract:base.html.twig' %}

{% block title %}{{ contract.title }}{% endblock %}

{% block breadcrumb %}
    {{ parent() }}
    <li>
        <a href="{{ path('contract_show', {'id': contract.id}) }}">
            {{ contract.title }}
        </a>
    </li>
    <li class="active">
        {% trans %}Edit{% endtrans %}
    </li>
{% endblock %}

{% block body %}
    <h1>{{ contract.title }}</h1>

    {{ form_start(edit_form) }}
    {{ form_widget(edit_form) }}
    <input type="submit" value="{% trans %}Save{% endtrans %}" class="btn btn-primary"/>
    {{ form_end(edit_form) }}

    {{ form_start(delete_form) }}
    <input type="submit" value="{% trans %}Delete{% endtrans %}" class="btn btn-danger">
    {{ form_end(delete_form) }}
{% endblock %}
