{% extends 'CrmpAcquisitionBundle:Offer:base.html.twig' %}

{% block title %}{{ offer.title }}{% endblock %}

{% block breadcrumb %}
    {{ parent() }}
    <li>
        <a href="{{ path('crmp_acquisition_offer_show', {'id': offer.id}) }}">
            {{ offer.title }}
        </a>
    </li>
    <li class="active">
        {% trans %}crmp.edit{% endtrans %}
    </li>
{% endblock %}

{% block body %}
    <h1>Offer edit</h1>

    {{ form_start(edit_form) }}
    {{ form_widget(edit_form) }}
    <button type="submit" class="btn btn-primary">
        <i class="fa fa-floppy-o"></i>
        {{ "crmp.save"|trans }}
    </button>
    {{ form_end(edit_form) }}

    {{ form_start(delete_form) }}
    <button type="submit" class="btn btn-danger">
        <i class="fa fa-trash"></i>
        {{ "crmp.delete"|trans }}
    </button>
    {{ form_end(delete_form) }}
{% endblock %}
