{% extends 'AcquisitionBundle:Offer:new.html.twig' %}

{% block title %}{{ offer.title }}{% endblock %}

{% block related_nav %}
    <ul class="nav nav-pills nav-stacked">
        <li>
            <a href="{{ path('offer_index') }}">
                <i class="fa fa-list-ul"></i>
                {% trans %}Back to the list{% endtrans %}
            </a>
        </li>
        <li>
            <a href="{{ path('offer_show', { 'id': offer.id }) }}">
                <i class="fa fa-ban"></i>
                {% trans %}Abort{% endtrans %}
            </a>
        </li>
    </ul>
{% endblock %}

{% block breadcrumb %}
    <ol class="breadcrumb">
        <li>
            <a href="/">
                Dashboard
            </a>
        </li>
        <li>
            <a href="{{ path('offer_index') }}">
                {% trans %}Offer{% endtrans %}
            </a>
        </li>
        <li>
            <a href="{{ path('offer_show', {'id': offer.id}) }}">
                {{ offer.title }}
            </a>
        </li>
        <li class="active">
            {% trans %}Edit{% endtrans %}
        </li>
    </ol>
{% endblock %}

{% block body %}
    <h1>Offer edit</h1>

    {{ form_start(edit_form) }}
    {{ form_widget(edit_form) }}
    <input type="submit" value="{% trans %}Save{% endtrans %}" class="btn btn-primary"/>
    {{ form_end(edit_form) }}

    {{ form_start(delete_form) }}
    <input type="submit" value="{% trans %}Delete{% endtrans %}" class="btn btn-danger">
    {{ form_end(delete_form) }}
{% endblock %}
