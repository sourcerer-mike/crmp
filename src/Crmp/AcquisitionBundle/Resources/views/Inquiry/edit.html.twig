{% extends 'CrmpAcquisitionBundle:Inquiry:show.html.twig' %}

{% block title %}{{ inquiry.title }}{% endblock %}

{% block breadcrumb %}
    <li>
        <a href="/">
            Dashboard
        </a>
    </li>
    <li>
        <a href="{{ path('crmp_acquisition_inquiry_index') }}">
            Inquiries
        </a>
    </li>
    <li>
        <a href="{{ path('crmp_acquisition_inquiry_show', {'id': inquiry.id}) }}">
            {{ inquiry.title }}
        </a>
    </li>
    <li class="active">
        {% trans %}crmp.edit{% endtrans %}
    </li>
{% endblock %}

{% block body %}
    <h1>Inquiry edit</h1>

    {{ form_start(edit_form) }}
        {{ form_widget(edit_form) }}
        <input type="submit" value="crmp.save" class="btn btn-primary"/>
    {{ form_end(edit_form) }}
    {{ form_start(delete_form) }}
    <input type="submit" value="Delete" class="btn btn-danger">
    {{ form_end(delete_form) }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript">
        $(function () {
            $('.datepicker').datepicker({
                dateFormat: '{{ "crmp.crm.date_js"|trans }}'
            });
        });
    </script>
{% endblock %}