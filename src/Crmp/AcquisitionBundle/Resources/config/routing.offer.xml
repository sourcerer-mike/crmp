<?xml version="1.0" encoding="UTF-8" ?>
<routes xmlns="http://symfony.com/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing
        http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="crmp_acquisition_offer_delete" path="/{id}" methods="DELETE">
        <default key="_controller">CrmpAcquisitionBundle:Offer:delete</default>
    </route>

    <route id="crmp_acquisition_offer_show" path="/{id}" methods="GET">
        <default key="_controller">CrmpAcquisitionBundle:Offer:show</default>
    </route>

    <route id="crmp_acquisition_offer_edit" path="/{id}/edit" methods="GET,POST">
        <default key="_controller">CrmpAcquisitionBundle:Offer:edit</default>
    </route>

    <route id="crmp_acquisition_offer_index" path="/" methods="GET">
        <default key="_controller">CrmpAcquisitionBundle:Offer:index</default>
    </route>

    <route id="crmp_acquisition_offer_new" path="/new" methods="GET,POST">
        <default key="_controller">CrmpAcquisitionBundle:Offer:new</default>
    </route>
</routes>