<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8"/>
    <title>
        crmp
        {% if block('title') %}
            - {% block title %}{% endblock %}
        {% endif %}
    </title>

    {% block stylesheets %}
        {% stylesheets filter="scssphp" output="css/app.css"
        "assets/scss/style.scss"
        "assets/css/*.css" %}
        <link rel="stylesheet" type="text/css" href="{{ asset_url }}"/>
        {% endstylesheets %}

        <link rel="stylesheet" type="text/css" href="{{ asset('css/jquery-ui.css') }}"/>
    {% endblock %}

    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}"/>

    <meta name="viewport" content="width=device-width, initial-scale=1, minimum-scale=1">

    {# Favicon #}
    <link rel="shortcut icon" type="image/x-icon" href="{{ asset('favicon.ico') }}">
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}">
    <link rel="icon" type="image/gif" href="{{ asset('img/favicon.gif') }}">
    <link rel="icon" type="image/png" href="{{ asset('img/favicon.png') }}">
    <link rel="apple-touch-icon" href="{{ asset('img/apple-touch-icon.png') }}">
    <link rel="apple-touch-icon" href="{{ asset('img/apple-touch-icon-57x57.png') }}" sizes="57x57">
    <link rel="apple-touch-icon" href="{{ asset('img/apple-touch-icon-60x60.png') }}" sizes="60x60">
    <link rel="apple-touch-icon" href="{{ asset('img/apple-touch-icon-72x72.png') }}" sizes="72x72">
    <link rel="apple-touch-icon" href="{{ asset('img/apple-touch-icon-76x76.png') }}" sizes="76x76">
    <link rel="apple-touch-icon" href="{{ asset('img/apple-touch-icon-114x114.png') }}" sizes="114x114">
    <link rel="apple-touch-icon" href="{{ asset('img/apple-touch-icon-120x120.png') }}" sizes="120x120">
    <link rel="apple-touch-icon" href="{{ asset('img/apple-touch-icon-128x128.png') }}" sizes="128x128">
    <link rel="apple-touch-icon" href="{{ asset('img/apple-touch-icon-144x144.png') }}" sizes="144x144">
    <link rel="apple-touch-icon" href="{{ asset('img/apple-touch-icon-152x152.png') }}" sizes="152x152">
    <link rel="apple-touch-icon" href="{{ asset('img/apple-touch-icon-180x180.png') }}" sizes="180x180">
    <link rel="apple-touch-icon" href="{{ asset('img/apple-touch-icon-precomposed.png') }}">
    <link rel="icon" type="image/png" href="{{ asset('img/favicon-16x16.png') }}" sizes="16x16">
    <link rel="icon" type="image/png" href="{{ asset('img/favicon-32x32.png') }}" sizes="32x32">
    <link rel="icon" type="image/png" href="{{ asset('img/favicon-96x96.png') }}" sizes="96x96">
    <link rel="icon" type="image/png" href="{{ asset('img/favicon-160x160.png') }}" sizes="160x160">
    <link rel="icon" type="image/png" href="{{ asset('img/favicon-192x192.png') }}" sizes="192x192">
    <link rel="icon" type="image/png" href="{{ asset('img/favicon-196x196.png') }}" sizes="196x196">
    <meta name="msapplication-TileImage" content="{{ asset('img/win8-tile-144x144.png') }}">
    <meta name="msapplication-TileColor" content="#ffffff">
    <meta name="msapplication-navbutton-color" content="#ffffff">
    <meta name="application-name" content="CRMP"/>
    <meta name="msapplication-tooltip" content="CRMP"/>
    <meta name="apple-mobile-web-app-title" content="CRMP"/>
    <meta name="msapplication-square70x70logo" content="{{ asset('img/win8-tile-70x70.png') }}">
    <meta name="msapplication-square144x144logo" content="{{ asset('img/win8-tile-144x144.png') }}">
    <meta name="msapplication-square150x150logo" content="{{ asset('img/win8-tile-150x150.png') }}">
    <meta name="msapplication-wide310x150logo" content="{{ asset('img/win8-tile-310x150.png') }}">
    <meta name="msapplication-square310x310logo" content="{{ asset('img/win8-tile-310x310.png') }}">

</head>
<body class="crmp-body">

<nav class="navbar navbar-default navbar-fixed-top">
    <div class="container-fluid">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse"
                    data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="{{ url('homepage') }}">crmp</a>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            {{ knp_menu_render('main', {'template': 'CrmpCrmBundle::menu.html.twig'}) }}

            {{ knp_menu_render('user', {'template': 'CrmpCrmBundle::menu-user.html.twig'}) }}
        </div>
        <!-- /.navbar-collapse -->
    </div>
    <!-- /.container-fluid -->
</nav>

<div class="so-cold" style="display: none;"><img src="{{ asset('img/so-cold.jpg') }}" style="display: none;"></div>
<div class="container-fluid">
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-2 col-lg-2 crmp-related">
            {% if app.environment == 'test' %}
                <div class="alert alert-warning visible-xs visible-sm">
                    <strong>Just a demo.</strong>
                    Feel free to change anything you want.
                    This instance will clean up every 15 minutes.
                </div>
            {% endif %}
            <ol class="breadcrumb visible-xs visible-sm">
                {% block breadcrumb %}
                    <li>
                        <a href="/">
                            Dashboard
                        </a>
                    </li>
                {% endblock %}
            </ol>

            <ul class="nav nav-pills nav-stacked">
                {% block related_nav %}
                    <li class="nav-header">{{ "crmp.menu.related.label"|trans }}</li>
                    {{ knp_menu_render('related', {'template': 'CrmpCrmBundle::menu-related.html.twig'}) }}
                {% endblock %}
            </ul>
        </div>
        <div class="col-xs-12 col-sm-12 col-md-10 col-lg-10">
            <div class="visible-md visible-lg">
                {% if app.environment == 'test' %}
                    <div class="alert alert-warning">
                        <strong>Just a demo.</strong>
                        Feel free to change anything you want.
                        This instance will clean up every 15 minutes.
                    </div>
                {% endif %}
                <ol class="breadcrumb">
                    {{ block('breadcrumb') }}
                </ol>
            </div>
            {% block body %}{% endblock %}
        </div>
    </div>
</div>

<footer class="footer">
    <div class="container">
        <span class="copyright">
            <a href="https://github.com/sourcerer-mike/crmp">CRMP</a>
            &copy; 2016
            <a href="https://mike-pretzlaw.de">Mike Pretzlaw</a>
        </span>
    </div>
</footer>

{% block javascripts %}
    <script src="{{ asset('js/jquery.js') }}" type="text/javascript"></script>
    <script src="{{ asset('js/jquery-ui.js') }}" type="text/javascript"></script>
    <script src="{{ asset('js/bootstrap.js') }}" type="text/javascript"></script>
{% endblock %}

</body>
</html>
