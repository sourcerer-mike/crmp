{% extends '@Crm/Customer/base.html.twig' %}

{% block title %}{{ customer.name }}{% endblock %}

{% block related_nav %}
    {{ parent() }}
    <li>
        <a href="{{ path('customer_edit', { 'id': customer.id }) }}"
           title="{% trans %}Edit{% endtrans %}">
            <i class="fa fa-pencil"></i> {% trans %}Customer edit{% endtrans %}
        </a>
    </li>
    <li>
        <a href="{{ path('inquiry_new', {'id': customer.id}) }}">
            <i class="fa fa-plus"></i>
            {% trans %}Inquiry creation{% endtrans %}
        </a>
    </li>
    <li>
        <a href="{{ path('address_new', {customer: customer.id}) }}">
            <i class="fa fa-plus"></i>
            {% trans %}Address creation{% endtrans %}
        </a>
    </li>
{% endblock %}

{% block breadcrumb %}
        {{ parent() }}
        <li class="active">
            {{ customer.name }}
        </li>
{% endblock %}

{% block body %}
    <h1>{{ customer.name }}</h1>

    <table class="table table-striped table-hover table-bordered">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ customer.id }}</td>
        </tr>
        </tbody>
    </table>

    <h2>{% trans %}Inquiry list{% endtrans %}</h2>

    {% include 'AcquisitionBundle:Inquiry:_list.html.twig' with {inquiries: customer.inquiries } %}

    <h2>{% trans %}Address list{% endtrans %}</h2>

    {% include 'CrmBundle:Address:_list.html.twig' with {addresses: customer.addresses } %}
{% endblock %}
