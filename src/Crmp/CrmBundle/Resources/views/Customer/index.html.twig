{% extends '@Crm/Customer/base.html.twig' %}

{% block title %}{% trans %}Customer list{% endtrans %}{% endblock %}

{% block related_nav %}
    <li>
        <a href="{{ path('customer_new') }}"
           title="Create a new entry">
            <i class="fa fa-plus"></i>
            New customer
        </a>
    </li>
{% endblock %}

{% block breadcrumb %}
    <li>
        <a href="/">
            Dashboard
        </a>
    </li>
    <li class="active">
        Customers
    </li>
{% endblock %}

{% block body %}
    <table class="table table-striped table-hover">
        <thead>
        <tr>
            <th>Name</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        {% for customer in customers %}
            <tr>
                <td>
                    <a href="{{ path('customer_show', { 'id': customer.id }) }}">{{ customer.name }}</a>
                </td>
                <td>
                    <div class="btn-group">
                        <a href="{{ path('customer_show', { 'id': customer.id }) }}"
                           title="View"
                           class="btn btn-primary">
                            <i class="fa fa-eye"></i>
                        </a>
                        <a href="{{ path('customer_edit', { 'id': customer.id }) }}"
                           title="{% trans %}Edit{% endtrans %}"
                           class="btn btn-default">
                            <i class="fa fa-pencil"></i>
                        </a>
                    </div>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
