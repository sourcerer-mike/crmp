{% extends 'CrmpCrmBundle:Customer:base.html.twig' %}

{% block title %}{{ customer.name }}{% endblock %}

{% block related_nav %}
    {{ parent() }}
    <li>
        <a href="{{ path('crmp_crm_customer_show', { 'id': customer.id }) }}">
            <i class="fa fa-ban"></i>
            {% trans %}crmp.abort{% endtrans %}
        </a>
    </li>
{% endblock %}

{% block breadcrumb %}
    {{ parent() }}
    <li>
        <a href="{{ path('crmp_crm_customer_show', {'id': customer.id}) }}">
            {{ customer.name }}
        </a>
    </li>
    <li class="active">
        {% trans %}crmp.edit{% endtrans %}
    </li>
{% endblock %}

{% block body %}
    <h1>{{ "crmp.crm.customer.edit"|trans }}</h1>

    {{ form_start(edit_form) }}
    {{ form_widget(edit_form) }}
    <button type="submit" class="btn btn-primary">
        <i class="fa fa-floppy-o"></i>
        {{ "crmp.save"|trans }}
    </button>
    {{ form_end(edit_form) }}

    {{ form_start(delete_form) }}
    <button type="submit" class="btn btn-danger pull-right">
        {{ "crmp.delete"|trans }}
    </button>
    {{ form_end(delete_form) }}

{% endblock %}
