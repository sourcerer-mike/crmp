<table class="table table-striped table-hover table-actions responsive">
    <thead>
    <tr>
        <th>Name</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    {% for customer in customers %}
        <tr>
            <td>
                <a href="{{ path('crmp_crm_customer_show', { 'id': customer.id }) }}">{{ customer.name }}</a>
            </td>
            <td>
                <div class="btn-group">
                    <a href="{{ path('crmp_crm_customer_show', { 'id': customer.id }) }}"
                       title="View"
                       class="btn btn-default">
                        <i class="fa fa-eye"></i>
                    </a>
                    <a href="{{ path('crmp_crm_customer_edit', { 'id': customer.id }) }}"
                       title="{% trans %}crmp.edit{% endtrans %}"
                       class="btn btn-default">
                        <i class="fa fa-pencil"></i>
                    </a>
                </div>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>