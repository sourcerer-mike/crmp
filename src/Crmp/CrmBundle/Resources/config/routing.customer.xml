<?xml version="1.0" encoding="UTF-8" ?>
<routes xmlns="http://symfony.com/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing
        http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="crmp_crm_customer_delete" path="/{id}" methods="DELETE">
        <default key="_controller">CrmpCrmBundle:Customer:delete</default>
    </route>

    <route id="crmp_crm_customer_show" path="/{id}" methods="GET">
        <default key="_controller">CrmpCrmBundle:Customer:show</default>
    </route>

    <route id="crmp_crm_customer_edit" path="/{id}/edit" methods="GET,POST">
        <default key="_controller">CrmpCrmBundle:Customer:edit</default>
    </route>

    <route id="crmp_crm_customer_index" path="/" methods="GET">
        <default key="_controller">CrmpCrmBundle:Customer:index</default>
    </route>

    <route id="crmp_crm_customer_new" path="/new" methods="GET,POST">
        <default key="_controller">CrmpCrmBundle:Customer:new</default>
    </route>
</routes>