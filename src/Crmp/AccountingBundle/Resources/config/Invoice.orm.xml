<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          http://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">

    <entity name="Crmp\AccountingBundle\Entity\Invoice"
            repository-class="Doctrine\ORM\EntityRepository"
            table="invoice">

        <id name="id" type="integer">
            <generator strategy="AUTO"/>
        </id>

        <field name="value" type="decimal" precision="16" scale="4" />

        <many-to-one target-entity="Crmp\CrmBundle\Entity\Customer" field="customer" />
        <many-to-one target-entity="Crmp\AcquisitionBundle\Entity\Contract" field="contract" />
    </entity>

</doctrine-mapping>
