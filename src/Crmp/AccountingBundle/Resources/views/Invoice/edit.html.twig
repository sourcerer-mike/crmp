{% extends '@CrmpAccounting/Invoice/base.html.twig' %}

{% block title %}{{ invoice.value|price }}{% endblock %}

{% block breadcrumb %}
    {{ parent() }}
    <li>
        <a href="{{ path('crmp_accounting_invoice_show', {'id': invoice.id}) }}">
            {{ invoice.value|price }}
        </a>
    </li>
    <li class="active">
        {% trans %}crmp.edit{% endtrans %}
    </li>
{% endblock %}

{% block body %}
    <h1>{% trans %}Invoice edit{% endtrans %}</h1>

    {% if not edit_form.vars.valid %}
        <div class="alert alert-warning">
        	<strong>{{ "crmp.form.invalid"|trans }}!</strong> {{ "crmp.form.pleaseFix"|trans }}
        </div>
    {% endif %}

    {{ form_start(edit_form) }}
    {{ form_widget(edit_form) }}
    <input type="submit" value="{% trans %}crmp.save{% endtrans %}" class="btn btn-primary"/>
    {{ form_end(edit_form) }}
    {{ form_start(delete_form) }}
    <button type="submit" class="btn btn-danger">
        <i class="fa fa-trash-o"></i>
        {% trans %}Delete{% endtrans %}
    </button>
    {{ form_end(delete_form) }}
{% endblock %}
