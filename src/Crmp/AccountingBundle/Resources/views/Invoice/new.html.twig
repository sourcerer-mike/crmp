{% extends '@CrmpAccounting/Invoice/base.html.twig' %}

{% block title %}{{ "crmp.accounting.invoice.new"|trans }}{% endblock %}

{% block breadcrumb %}
    {{ parent() }}
    <li class="active">
        {{ block('title') }}
    </li>
{% endblock %}

{% block body %}
    <h1>{{ block('title') }}</h1>

    {{ form_start(form) }}
    {{ form_widget(form) }}
    <button type="submit" class="btn btn-primary">
        <i class="fa fa-floppy-o"></i>
        {{ "crmp.create"|trans }}
    </button>
    {{ form_end(form) }}
{% endblock %}
