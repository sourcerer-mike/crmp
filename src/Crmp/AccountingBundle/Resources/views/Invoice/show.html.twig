{% extends '@CrmpAcc/Invoice/base.html.twig' %}

{% block title %}{{ invoice.value|price }} {{ invoice.customer.name }}{% endblock %}

{% block breadcrumb %}
    {{ parent() }}
    <li class="active">
        {{ block('title') }}
    </li>
{% endblock %}

{% block body %}
    <h1>{{ invoice.value|price }} {{ invoice.customer.name }}</h1>

    <table class="table table-striped table-hover table-bordered">
        <tbody>
        <tr>
            <th>{{ "crmp.crm.customer.singular"|trans }}</th>
            <td>
                <a href="{{ path('customer_show', {id: invoice.customer.id}) }}">
                    {{ invoice.customer.name }}
                </a>
            </td>
        </tr>
        <tr>
            <th>
                {% trans %}Value{% endtrans %}
            </th>
            <td>
                {{ invoice.value|price }}
            </td>
        </tr>
        </tbody>
    </table>
{% endblock %}
