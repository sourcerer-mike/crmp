{% extends '@CrmpAcc/Invoice/base.html.twig' %}

{% block title %}{{ invoice.value }}{% endblock %}

{% block related_nav %}
    {{ parent() }}
    <li>
        <a href="{{ path('invoice_edit', { 'id': invoice.id }) }}"
           title="{% trans %}Edit{% endtrans %}">
            <i class="fa fa-pencil"></i> {% trans %}Invoice edit{% endtrans %}
        </a>
    </li>
{% endblock %}

{% block breadcrumb %}
        {{ parent() }}
        <li class="active">
            {{ invoice.value }}
        </li>
{% endblock %}

{% block body %}
    <h1>{{ invoice.value }}</h1>

    <table class="table table-striped table-hover table-bordered">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ invoice.id }}</td>
        </tr>
        </tbody>
    </table>
{% endblock %}
