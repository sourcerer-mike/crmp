{% extends '@CrmpAcc/Invoice/base.html.twig' %}

{% block title %}{{ invoice.value }}{% endblock %}

{% block related_nav %}
    {{ parent() }}
    <li>
        <a href="{{ path('invoice_edit', { 'id': invoice.id }) }}"
           title="{% trans %}Edit{% endtrans %}">
            <i class="fa fa-pencil"></i> {% trans %}Edit{% endtrans %}
        </a>
    </li>
{% endblock %}

{% block breadcrumb %}
        {{ parent() }}
        <li class="active">
            {{ invoice.value }}
        </li>
{% endblock %}

{% block body %}
    <h1>{{ invoice.value }}</h1>

    <table class="table table-striped table-hover table-bordered">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ invoice.id }}</td>
        </tr>
        <tr>
            <th>{% trans %}Customer{% endtrans %}</th>
            <td>
                <a href="{{ path('customer_show', {id: invoice.customer.id}) }}">
                    {{ invoice.customer.name }}
                </a>
            </td>
        </tr>
        <tr>
            <th>
                {% trans %}Value{% endtrans %}
            </th>
            <td>
                {{ invoice.value|price }}
            </td>
        </tr>
        </tbody>
    </table>
{% endblock %}
